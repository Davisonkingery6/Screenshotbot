@echo off
color 0E
title 🧪 SCREENSHOT TESTER - Every Minute
powershell.exe -ExecutionPolicy Bypass -Command "$host.UI.RawUI.WindowTitle='🧪 Screenshot Tester'; Add-Type @'`nusing System;using System.Runtime.InteropServices;public class DPI{[DllImport(\"user32.dll\")]public static extern bool SetProcessDPIAware();}'@; [DPI]::SetProcessDPIAware(); Add-Type -A System.Windows.Forms,System.Drawing; Clear-Host; Write-Host '╔════════════════════════════════════════════╗' -F Yellow; Write-Host '║        SCREENSHOT TESTER MODE              ║' -F Yellow; Write-Host '║   Takes screenshot EVERY MINUTE at :00     ║' -F Yellow; Write-Host '╚════════════════════════════════════════════╝' -F Yellow; Write-Host ''; $m=[System.Windows.Forms.Screen]::AllScreens; $mon=if($m.Count -gt 1){$m[1]}else{$m[0]}; Write-Host \"Testing Monitor #$($m.IndexOf($mon)+1): $($mon.Bounds.Width)×$($mon.Bounds.Height)\" -F Cyan; Write-Host 'Press Ctrl+C to stop testing' -F Red; Write-Host ''; $count=0; while($true){$now=Get-Date; $sec=$now.ToString('ss'); if($sec -eq '00'){$count++; Write-Host \"`n🔔 TEST SCREENSHOT #$count at $($now.ToString('HH:mm:ss'))\" -F Green -B DarkGreen; Write-Host '  Capturing...' -F Yellow; md C:\Screenshots -ea 0|Out-Null; $b=$mon.Bounds; $bmp=New-Object Drawing.Bitmap $b.Width,$b.Height; $g=[Drawing.Graphics]::FromImage($bmp); $g.CopyFromScreen($b.X,$b.Y,0,0,$bmp.Size); $fn=\"TEST_$(Get-Date -F yyyyMMdd_HHmmss).png\"; $bmp.Save(\"C:\Screenshots\$fn\"); $g.Dispose(); $bmp.Dispose(); Write-Host \"  ✅ Saved: $fn\" -F Green; Write-Host \"  📐 Size: $($b.Width) × $($b.Height)\" -F Cyan; Write-Host '  ⏱️  Next test in 60 seconds...' -F Gray; Start-Sleep 2}else{$wait=60-[int]$sec; Write-Host \"`r  ⏰ Time: $($now.ToString('HH:mm:ss')) | Next test in: $wait seconds     \" -F White -NoNewline} Start-Sleep 1}"