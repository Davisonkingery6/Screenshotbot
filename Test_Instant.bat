title 🎯 INSTANT SCREENSHOT TEST
powershell.exe -ExecutionPolicy Bypass -Command "Add-Type @'`nusing System;using System.Runtime.InteropServices;public class DPI{[DllImport(\"user32.dll\")]public static extern bool SetProcessDPIAware();}'@; [DPI]::SetProcessDPIAware(); Add-Type -A System.Windows.Forms,System.Drawing; Clear-Host; Write-Host '████████╗███████╗███████╗████████╗' -F Blue; Write-Host '╚══██╔══╝██╔════╝██╔════╝╚══██╔══╝' -F Blue; Write-Host '   ██║   █████╗  ███████╗   ██║   ' -F Cyan; Write-Host '   ██║   ██╔══╝  ╚════██║   ██║   ' -F Cyan; Write-Host '   ██║   ███████╗███████║   ██║   ' -F DarkCyan; Write-Host '   ╚═╝   ╚══════╝╚══════╝   ╚═╝   ' -F DarkCyan; Write-Host ''; Write-Host 'INSTANT SCREENSHOT TEST' -F White -B DarkBlue; Write-Host ''; $m=[System.Windows.Forms.Screen]::AllScreens; $mon=if($m.Count -gt 1){$m[1]}else{$m[0]}; Write-Host \"Monitor: #$($m.IndexOf($mon)+1) ($($mon.Bounds.Width)×$($mon.Bounds.Height))\" -F Yellow; Write-Host ''; Write-Host '📋 INSTRUCTIONS:' -F Green; Write-Host '  • Press SPACE for screenshot' -F White; Write-Host '  • Press Q to quit' -F White; Write-Host '  • Press C to open Screenshots folder' -F White; Write-Host ''; $count=0; while($true){Write-Host \"`rReady! Press [SPACE] to capture...\" -F Gray -NoNewline; if($Host.UI.RawUI.KeyAvailable){$key=$Host.UI.RawUI.ReadKey('NoEcho,IncludeKeyDown'); if($key.Character -eq ' '){$count++; Write-Host \"`n`n🎯 CAPTURE #$count\" -F Yellow -B DarkGreen; Write-Host '📸 Taking screenshot...' -F Green; md C:\Screenshots -ea 0|Out-Null; $b=$mon.Bounds; $bmp=New-Object Drawing.Bitmap $b.Width,$b.Height; $g=[Drawing.Graphics]::FromImage($bmp); $g.CopyFromScreen($b.X,$b.Y,0,0,$bmp.Size); $fn=\"INSTANT_TEST_$(Get-Date -F yyyyMMdd_HHmmss).png\"; $bmp.Save(\"C:\Screenshots\$fn\"); $g.Dispose(); $bmp.Dispose(); Write-Host \"✅ Saved: $fn\" -F Green; Write-Host \"📏 Size: $($b.Width) × $($b.Height) pixels\" -F Cyan; Write-Host ''}elseif($key.Character -eq 'q' -or $key.Character -eq 'Q'){Write-Host \"`n`nGoodbye!\" -F Yellow; break}elseif($key.Character -eq 'c' -or $key.Character -eq 'C'){explorer C:\Screenshots}} Start-Sleep -Milliseconds 100}"